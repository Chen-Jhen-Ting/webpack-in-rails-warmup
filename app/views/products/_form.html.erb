<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field  mx-auto">
    <%= form.label :name, class: 'd-block  px-0' %>
    <%= form.text_field :name, class: 'col' %>
  </div>

  <div class="field  mx-auto">
    <%= form.label :money, class: 'd-block  px-0' %>
    <%= form.text_field :money, class: 'col' %>
  </div>

  <div class="form-group">
     <div class="input-group date" id="datetimepicker7" data-target-input="nearest">
          <input  name='product[start_at]' type="text" class="form-control datetimepicker-input" data-target="#datetimepicker7" placeholder='起始日'/>
          <div class="input-group-append" data-target="#datetimepicker7" data-toggle="datetimepicker">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
      </div>
  </div>

  <div class="form-group">
     <div class="input-group date" id="datetimepicker8" data-target-input="nearest">
          <input name='product[end_at]' type="text" class="form-control datetimepicker-input" data-target="#datetimepicker8" placeholder='終止日'/>
          <div class="input-group-append" data-target="#datetimepicker8" data-toggle="datetimepicker">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
      </div>
  </div>

  <div class="field  mx-auto">
    <%= form.label :currency , class: 'd-block  px-0'%>
    <select name="product[currency]" class='col currency' name="state">
      <option value="NTD">NTD</option>
      <option value="USD">USD</option>
      <option value="HKD">HKD</option>
    </select>
  </div>

  <div class="field  mx-auto">
    <%= form.label :tag_list, class: 'd-block  px-0' %>
    <select name="product[tag_list][]" multiple= 'true' class='col ' >
      <% product.tag_list.each do |tag| %>
        <option selected="selected"><%= tag %></option>
      <% end %>
    </select>
  </div>
  <div class="actions mx-auto">
    <%= form.submit %>
  </div>
<% end %>

