<h1 class="text-center">Products</h1>

<table class="table table-striped mx-auto">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Money</th>
      <th scope="col">Currency</th>
      <th scope="col">Tags</th>
      <th scope="col">Start at</th>
      <th scope="col">End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td scope="col"><%= product.name %></td>
        <td scope="col"><%= product.money %></td>
        <td scope="col"><%= product.currency %></td>
        <td scope="col"><%= display_tag_list(product.tags) %></td>
        <td scope="col"><%= product.start_at&.strftime("%m/%d") %></td>
        <td scope="col"><%= product.end_at&.strftime("%m/%d") %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Product', new_product_path, class:'bg-muted text-danger d-block text-center col-3 mx-auto' %>
